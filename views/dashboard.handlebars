<div class="container col-12 p-5">
    <button id="new-post">+ New Post</button>
</div>

<div class="container col-12 p-5" id="post-form" style="display: none">
    <div class="card">
        <div class="card-top">
            <h1 class="page-title">Create New Post</h1>
        </div>
        <div class="card-mid">
            <div class="justify-center p-5">
                <div>
                    <form class="form create-post-form">
                    <div class="form-group">
                        <label for="blog-title">Title:</label>
                        <textarea class="form-input" type="text" id="blog-title"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="blog-content">Content:</label>
                        <textarea class="form-input" type="text" id="blog-content"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit" id="create">Create</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div> 
</div>

{{!-- calls the my-posts partial for every blog --}}
{{#each blogs as |blog|}}
{{> my-posts}}
{{/each}}


<script src="/js/newPost.js"></script>